{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2019"],
    "incremental": true,
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false
  },
  "include": ["./src/**/*.ts"]
}
